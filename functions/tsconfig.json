{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@data/*": ["src/data/*"],
      "@domain/*": ["src/domain/*"],
      "@interface/*": ["src/interface/*"],
    },
    "skipLibCheck": true, //when this issue is merged, remove this line: https://github.com/dcodeIO/long.js/pull/130
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
